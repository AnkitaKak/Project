    <authentication-manager>  
      <authentication-provider>  
        
        <jdbc-user-service data-source-ref="dataSource"  
            users-by-username-query="select uname, pwd, enabled from users where uname=?"  
            authorities-by-username-query="select uname, role from users where uname=?" />  
            
      </authentication-provider>  
    </authentication-manager>
      
     
</beans:beans>